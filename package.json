{
  "name": "@jenssimon/eslint-config-sfcc",
  "version": "0.0.0-development",
  "description": "A collection of shareable ESLint configurations for Salesforce Commerce Cloud (SFCC)",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-sfcc"
  },
  "license": "MIT",
  "files": [
    "/index.js",
    "/sfra.js",
    "/sfra-storefront.js",
    "/lib/"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts,.cjs,.mjs,.cts,.mts ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "eslint-plugin-es5": "1.5.0",
    "eslint-plugin-sitegenesis": "1.0.0"
  },
  "peerDependencies": {
    "@jenssimon/eslint-config-base": ">=6.7.0",
    "eslint": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@jenssimon/eslint-config-base": "7.3.17",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.56.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "23.0.0"
  },
  "packageManager": "yarn@4.0.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
