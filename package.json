{
  "name": "@jenssimon/eslint-config-sfcc",
  "version": "0.0.0-development",
  "description": "A collection of shareable ESLint configurations for Salesforce Commerce Cloud (SFCC)",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig",
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-sfcc"
  },
  "license": "MIT",
  "files": [
    "/index.js",
    "/sfra.js",
    "/sfra-storefront.js",
    "/lib/"
  ],
  "scripts": {
    "lint": "eslint --fix ./",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "eslint-plugin-es5": "1.5.0",
    "eslint-plugin-sitegenesis": "1.0.0"
  },
  "peerDependencies": {
    "@jenssimon/eslint-config-base": ">=4.0.0",
    "eslint": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.1",
    "@commitlint/config-conventional": "17.4.0",
    "@jenssimon/eslint-config-base": "6.6.6",
    "commitizen": "4.2.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.31.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "20.0.2"
  },
  "packageManager": "yarn@3.3.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
